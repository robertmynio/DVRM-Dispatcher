	@Override
	public void OrderWakeUp() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public boolean addTask(ITask task) {
		try{
			taskList.add(task);
			if(task.isPredicted())
				nrOfPredictedTasks++;
			nrOfTasks++;
			usedCPU += task.getCpu();
			usedRAM += task.getMem();
			usedHDD += task.getHdd();
			return true;
		}catch(Exception ex){
			
		}
	}

